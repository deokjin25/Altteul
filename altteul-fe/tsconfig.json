{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "target": "ESNext",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    // Bundler Mode
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@router/*": ["router/*"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
